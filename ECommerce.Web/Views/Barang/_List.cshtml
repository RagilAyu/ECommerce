        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamaBarang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gambar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VarianWarna)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VarianUkuran)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VarianStok)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Harga)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
