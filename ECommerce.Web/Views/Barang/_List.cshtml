@model IEnumerable<ECommerce.ViewModel.BarangViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NamaKategori)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamaBarang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gambar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VarianWarna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VarianUkuran)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VarianStok)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detail)
        </th>
